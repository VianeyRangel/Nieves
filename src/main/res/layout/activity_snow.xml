<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utng.vgutierrez.nieves.SnowActivity">

    <ImageView
        android:layout_width="@dimen/width_size"
        android:layout_height="@dimen/width_size"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/margin_size"
        android:id="@+id/imv_photo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txv_name"
            android:text="@string/txt_name"
            android:textSize="@dimen/text_size"
            android:layout_marginBottom="@dimen/margin_size"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txv_start"
            android:text="@string/txt_start"
            android:layout_marginBottom="@dimen/margin_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txv_type"
            android:text="@string/txt_type"/>
        <Button
            android:layout_width="@dimen/strech_size"
            android:layout_height="@dimen/height_size"
            android:text="@string/txt_location"
            android:id="@+id/btn_location"
            />

    </LinearLayout>
</LinearLayout>
